<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#4a8ee0</item>
        <item name="colorSecondary">#4a8ee0</item>
        <item name="colorOnSecondary">#fff</item>
        <item name="android:statusBarColor">#4c000000</item>
    </style>

    <style name="TextButtonStyle">
        <item name="android:textColor">@color/text_button</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SignInOverLineTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#636f79</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ViewerDocumentPlaceholderStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">H,328:154</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="layout_constraintEnd_toEndOf">@+id/end_guideline</item>
        <item name="layout_constraintStart_toStartOf">@+id/start_guideline</item>
        <item name="layout_constraintTop_toBottomOf">@+id/title_divider</item>
    </style>

    <style name="SignInScreenContentStyle">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ViewerSendImageViewStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/ic_link</item>
        <item name="android:visibility">gone</item>
    </style>
    
    <style name="SendProjectTextViewStyle">
        <item name="android:layout_height">24dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#424650</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">gone</item>
        <item name="android:maxEms">@integer/send_project_max_ems</item>
    </style>


</resources>
